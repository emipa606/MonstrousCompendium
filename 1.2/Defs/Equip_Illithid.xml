      <WorkToMake>5500</WorkToMake>
    </statBases>
    <destroyOnDrop>true</destroyOnDrop>
    <menuHidden>True</menuHidden>
    <apparel>
      <careIfWornByCorpse>false</careIfWornByCorpse>
      <careIfDamaged>false</careIfDamaged>
      <wearPerDay>0</wearPerDay>
